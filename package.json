{
  "name": "booking-system-invenco",
  "version": "1.0.0",
  "description": "A serverless booking system built with Express, Prisma, and AWS Lambda",
  "main": "dist/lambda.js",
  "scripts": {
    "build": "tsc",
    "dev": "npm run build && sls offline",
    "start": "node dist/lambda.js",
    "initial:setup:mac": "cp .env.example .env && prisma:migrate && prisma:seed && npm i",
    "initial:setup:windows": "copy .env.example .env && prisma:migrate && prisma:seed && npm i",
    "prisma:seed": "prisma db seed",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "prisma:reset": "prisma migrate reset",
    "deploy": "npm run build && sls deploy",
    "type-check": "tsc --noEmit"
  },
  "prisma": {
    "seed": "ts-node prisma/seed/index.ts"
  },
  "dependencies": {
    "@codegenie/serverless-express": "^4.17.0",
    "@prisma/client": "^5.7.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-xss-sanitizer": "^2.0.0",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "ts-node": "^10.9.2",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/express-xss-sanitizer": "^2.0.0",
    "@types/hpp": "^0.2.6",
    "@types/node": "^20.10.5",
    "prisma": "^5.7.1",
    "serverless": "^3.38.0",
    "serverless-offline": "^13.3.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
